#!/bin/zsh
autoload colors
colors

if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
    for branch_to_delete in "$@"; do
        echo -e "${fg[white]}deleting branch $branch_to_delete${reset_color}"
        git branch -D "$branch_to_delete"
        git push origin --delete "$branch_to_delete"
    done
else
    echo -e "${fg[red]}You are not in a git repository.${reset_color}"
fi